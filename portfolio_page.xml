<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.loginportfolio.PortfolioPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:id="@+id/port_title"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:text="Campus Events"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/port_title"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        android:textAlignment="center"
        android:text="Venus Home Page"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/port_list_view"></ListView>
</RelativeLayout>
